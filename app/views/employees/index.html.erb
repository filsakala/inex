<h1>Listing Employees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Nickname</th>
      <th>Sex</th>
      <th>Department</th>
      <th>Personal mail</th>
      <th>Work mail</th>
      <th>Personal phone</th>
      <th>Work phone</th>
      <th>Other contacts</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.name %></td>
        <td><%= employee.nickname %></td>
        <td><%= employee.sex %></td>
        <td><%= employee.department %></td>
        <td><%= employee.personal_mail %></td>
        <td><%= employee.work_mail %></td>
        <td><%= employee.personal_phone %></td>
        <td><%= employee.work_phone %></td>
        <td><%= employee.other_contacts %></td>
        <td><%= employee.state %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

