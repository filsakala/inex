<fieldset>
  <legend>My address</legend>
  <div class="field">
    <%= f.label :title do %>
        Type <i class="small red asterisk icon"></i>
    <% end %>
    <%= f.select :title, ['Permanent', 'Actual'] %>
  </div>
  <div class="two fields">
    <div class="field">
      <%= f.label :address do %>
          Address and number <i class="small red asterisk icon"></i>
      <% end %>
      <%= f.text_field :address %>
    </div>
    <div class="field">
      <%= f.label :postal_code do %>
          Postal code <i class="small red asterisk icon"></i>
      <% end %>
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="two fields">
    <div class="field">
      <%= f.label :city do %>
          City <i class="small red asterisk icon"></i>
      <% end %>
      <%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :country do %>
          Country <i class="small red asterisk icon"></i>
      <% end %>
      <%= f.select :country, Country.order(:name).pluck(:name), selected: 'Slovakia', class: "ui dropdown" %>
    </div>
  </div>
  <div class="ui toggle checkbox field">
    <%= f.check_box :_destroy %>
    <%= f.label :_destroy %>
  </div>
</fieldset>