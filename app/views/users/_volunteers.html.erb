<% if vols.any? %>
    <h3><%= t :role %>: <%= t :volunteers %></h3>
    <table class="ui green celled table">
      <thead>
      <tr>
        <th class="two wide">Event</th>
        <th class="two wide"><%= t :date %></th>
        <th class="two wide"><%= t :actions %></th>
      </tr>
      </thead>
      <tbody>
      <% vols.each do |vol| %>
          <tr>
            <td>
              <%= vol.event.try(:title) %>
              <% if vol.event_list && vol.event_list.is_child %>
                  <i class="big child icon pop_up" title="<%= vol.event_list.name %> <%= vol.event_list.surname %>"></i>
              <% end %>
            </td>
            <td><%= vol.event.try(:from_to) %></td>
            <td>
              <% if vol.event %>
                  <%= link_to personalized_detail_event_path(vol.event), class: 'pop_up', title: 'Detail' do %>
                      <i class="grey unhide icon"></i> Inform√°cie
                  <% end %>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>