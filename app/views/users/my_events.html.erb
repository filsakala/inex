<h2 class="ui header">
  <i class="circular calendar icon"></i>
  <div class="content">
    <%= t :visited_events %>
    <div class="sub header"><%= t :visited_events_header %></div>
  </div>
</h2>

<% if !@user.volunteers.blank? || !@user.leaders.blank? || !@user.trainers.blank? || !@user.local_partners.blank? %>
    <%= render 'volunteers', vols: @user.volunteers %>
    <%= render 'non_volunteers', vols: @user.leaders, voltype: 'leaders' %>
    <%= render 'non_volunteers', vols: @user.trainers, voltype: 'trainers' %>
    <%= render 'non_volunteers', vols: @user.local_partners, voltype: 'local_partner' %>
<% else %>
    <div class="ui icon message">
      <i class="frown icon"></i>
      <div class="content">
        <div class="header">
          <%= t :visited_events_announcement %>
        </div>
        <p><%= t :visited_events_announcement_body %></p>
      </div>
    </div>
<% end %>