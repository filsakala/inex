<%= header :h2, "user", name_nickname_format(@contact), "Detail kontaktu" %>

<%= render 'contact_lists/panel' %>

<div class="ui list">
  <% if @contact.organization %>
      <div class="item">
        <i class="users icon"></i>
        <div class="content">
          <%= @contact.organization.try(:name) %>
        </div>
      </div>
  <% end %>
  <% unless @contact.dept.blank? %>
      <div class="item">
        <i class="home icon"></i>
        <div class="content">
          <%= @contact.dept %>
        </div>
      </div>
  <% end %>
  <% unless @contact.mail.blank? %>
      <div class="item">
        <i class="mail icon"></i>
        <div class="content">
          <a href="mailto:<%= @contact.mail %>"><%= @contact.mail %></a>
        </div>
      </div>
  <% end %>
  <% unless @contact.phone.blank? %>
      <div class="item">
        <i class="phone icon"></i>
        <div class="content">
          <%= @contact.phone %>
        </div>
      </div>
  <% end %>
  <% unless @contact.other_contacts.blank? %>
      <div class="item">
        <i class="archive icon"></i>
        <div class="content">
          <%= @contact.other_contacts %>
        </div>
      </div>
  <% end %>
  <% unless @contact.notes.blank? %>
      <div class="item">
        <i class="pointing right icon"></i>
        <div class="content">
          <%= t :notes %>: <%= @contact.notes %>
        </div>
      </div>
  <% end %>
</div>