<%= form_for([@event_type, @event], html: { class: 'ui form' }) do |f| %>
    <%= write_error(@event) %>

    <%= hidden_field_tag :actual_step, 'first' %>

    <div class="field">
      <%= f.label :event_type_id, t(:event_type) %>
      <%= f.select :event_type_id, options_from_collection_for_select(EventType.all, 'id', 'title', params[:event_type_id]), include_blank: true %>
    </div>
    <div class="two fields">
      <div class="field">
        <%= f.label :title do %>
            <%= t :name_task %> SK<i class="small red asterisk icon"></i>
        <% end %>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :title_en do %>
            <%= t :name_task %> EN
        <% end %>
        <%= f.text_field :title_en %>
      </div>
    </div>
    <div class="two fields">
      <div class="field">
        <%= f.label :code, class: 'pop_up', title: t(:sci_our_code_description) do %>
            <%= t :sci_our_code %><i class="ui large info circle icon"></i>
        <% end %>
        <%= f.text_field :code %>
      </div>
      <div class="field">
        <%= f.label :code_alliance, class: 'pop_up', title: t(:alliance_code_description) do %>
            <%= t :alliance_code %> <i class="ui large info circle icon"></i>
        <% end %>
        <%= f.text_field :code_alliance %>
      </div>
    </div>
    <div class="field">
      <%= f.label :organization_id, t(:organization) %>
      <%= f.select :organization_id, options_from_collection_for_select(@organizations, 'id', 'name', @event.organization_id), include_blank: true %>
    </div>
    <div class="three fields">
      <div class="field">
        <%= f.label :from, t(:from) %>
        <%= f.text_field :from, value: datetime_format(@event.from), class: 'datetimepick' %>
      </div>
      <div class="field">
        <%= f.label :to, t(:do) %>
        <%= f.text_field :to, value: datetime_format(@event.to), class: 'datetimepick' %>
      </div>
      <div class="field">
        <%= f.label :is_only_date, class: 'pop_up', title: t(:are_only_dates_description) do %>
            <%= t :are_only_dates %> <i class="ui large info circle icon"></i>
        <% end %>
        <%= f.check_box :is_only_date, class: 'ui checkbox' %>
      </div>
    </div>
    <div class="field">
      <%= f.label :notes, class: 'pop_up', title: t(:event_notes_description) do %>
          <%= t(:notes) %> <i class="ui large info circle icon"></i>
      <% end %>
      <%= f.text_area :notes %>
    </div>
    <div class="actions">
      <%= f.submit t(:contacts_event_next_step), class: 'ui green button' %>
    </div>
<% end %>
