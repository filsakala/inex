<%= render 'edit_event_header' %>

<%= render 'form_upper_panel' %>
<div class="ui attached segment">
  <%= form_for([@event_type, @event], html: { class: 'ui form' }) do |f| %>
      <%= write_error(@event) %>

      <%= hidden_field_tag :actual_step, 'second' %>

      <div class="two fields">
        <div class="field">
          <%= f.label :address, "#{t :address}, #{t :postal_code}" %>
          <%= f.text_field :address %>
        </div>
        <div class="field">
          <%= f.label :city, t(:city) %>
          <%= f.text_field :city %>
        </div>
      </div>
      <div class="field">
        <%= f.label :country do %>
            <%= t :country %>
        <% end %>
        <%= select_tag "event[country]", options_from_collection_for_select(Country.all, 'name', 'name', @event.country || 'Slovakia'), include_blank: @event.country, class: 'ui search dropdown' %>
      </div>
      <div class="two fields">
        <div class="field">
          <%= f.label :airport, t(:airport) %>
          <%= f.text_field :airport %>
        </div>
        <div class="field">
          <%= f.label :bus_train, t(:bus_train_station) %>
          <%= f.text_field :bus_train %>
        </div>
      </div>
      <div class="ui icon message">
        <i class="info icon"></i>
        <div class="content">
          <div class="header">
            <%= t :gps_setting_info %>
          </div>
          <p><%= t :gps_setting_info_body %></p>
        </div>
      </div>
      <div class="two fields">
        <div class="field">
          <%= f.label :gps_latitude, 'GPS Latitude' %>
          <%= f.text_field :gps_latitude %>
        </div>
        <div class="field">
          <%= f.label :gps_longitude, 'GPS Longitude' %>
          <%= f.text_field :gps_longitude %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit t(:contacts_event_next_step), class: 'ui green button' %>
      </div>
  <% end %>
</div>
<%= render 'form_lower_panel' %>