<%= render 'edit_event_header' %>

<%= render 'form_upper_panel' %>
<div class="ui attached segment">
  <%= form_for([@event_type, @event], html: { class: 'ui form' }) do |f| %>
      <%= write_error(@event) %>

      <%= hidden_field_tag :actual_step, 'third' %>

      <div>
        <div class="ui two column grid">
          <div class="ui column">
            <h3 class="ui header">
              <%= t :capacity %>
              <div class="sub header">
                <%= t :capacity_description %>
              </div>
            </h3>
            <div class="field">
              <%= f.label :capacity_total, t(:capacity_total) %>
              <%= f.number_field :capacity_total, min: 0 %>
            </div>
            <div class="field">
              <%= f.label :capacity_men, t(:capacity_men) %>
              <%= f.number_field :capacity_men, min: 0 %>
            </div>
            <div class="field">
              <%= f.label :capacity_women, t(:capacity_women) %>
              <%= f.number_field :capacity_women, min: 0 %>
            </div>
            <div class="ui toggle checkbox field">
              <%= f.check_box :ignore_sex_for_capacity %><br>
              <%= f.label :ignore_sex_for_capacity, class: "pop_up", title: "Nezáleží na pohlaví účastníkov, kapacita (a free places) pre mužov/ženy bude ignorovaná."  do %>
                  Kapacita je nezávislá od pohlavia
                  <i class="large info circle icon"></i>
              <% end %>
            </div>
          </div>
          <div class="ui column">
            <h3 class="ui header">
              Free places
              <div class="sub header">
                <%= t :free_places_description %>
              </div>
            </h3>
            <div class="field">
              <%= f.label :free_total, t(:free_places_total) %>
              <%= f.number_field :free_total, min: 0 %>
            </div>
            <div class="field">
              <%= f.label :free_men, t(:free_places_men) %>
              <%= f.number_field :free_men, min: 0 %>
            </div>
            <div class="field">
              <%= f.label :free_women, t(:free_places_women) %>
              <%= f.number_field :free_women, min: 0 %>
            </div>
            <div class="two fields">
              <div class="field">
                <%= f.label :min_age, t(:minimal_age) %>
                <%= f.number_field :min_age, min: 0 %>
              </div>
              <div class="field">
                <%= f.label :max_age, t(:maximal_age) %>
                <%= f.number_field :max_age, min: 0 %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit t(:contacts_event_next_step), class: 'ui green button' %>
      </div>
  <% end %>
</div>
<%= render 'form_lower_panel' %>